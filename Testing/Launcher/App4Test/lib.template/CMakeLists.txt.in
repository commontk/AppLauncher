
project(app4TestLib@LIBSUFFIX@)

SET(KIT_NAME ${PROJECT_NAME})

# Source files
SET(KIT_SRCS
  app4TestLib@LIBSUFFIX@.cpp
  app4TestLib@LIBSUFFIX@.h
  )

SET(KIT_INCLUDE_DIRS
  ${CMAKE_CURRENT_SOURCE_DIR}
  ${CMAKE_CURRENT_BINARY_DIR}
  )
INCLUDE_DIRECTORIES(${KIT_INCLUDE_DIRS})

SET(MY_LIBNAME ${KIT_NAME})

CONFIGURE_FILE(
  ${App4Test_SOURCE_DIR}/App4TestExport.h.in
  ${CMAKE_CURRENT_BINARY_DIR}/app4TestLib@LIBSUFFIX@Export.h
  )
  
ADD_LIBRARY(${KIT_NAME} "SHARED" ${KIT_SRCS})

SET_TARGET_PROPERTIES(${KIT_NAME}  PROPERTIES
  LIBRARY_OUTPUT_DIRECTORY ${App4Test_BINARY_DIR}/libs
  ARCHIVE_OUTPUT_DIRECTORY ${App4Test_BINARY_DIR}/libs
  RUNTIME_OUTPUT_DIRECTORY ${App4Test_BINARY_DIR}/libs
  )

SET(APP4TEST_LIBRARIES ${APP4TEST_LIBRARIES} ${KIT_NAME} CACHE INTERNAL "App4Test libraries" FORCE)
SET(APP4TEST_INCLUDE_DIRS ${APP4TEST_INCLUDE_DIRS} ${KIT_INCLUDE_DIRS} CACHE INTERNAL "App4Test include dirs" FORCE)
